@model IEnumerable<Entities.ViewModels.PeopleViewModels>
@{
    Layout = null;
    int stt = 0;
}
<table class="table table-striped table-hover table-bordered" id="sample_editable_1">
    <thead>
        <tr>
            <th> STT</th>
            <th> Họ và tên </th>
            <th> Mã thành viên </th>
            <th> Mã đơn vị </th>
            <th> Email </th>
            <th> Ngày sinh </th>
            @*<th> Số điện thoại </th>*@
            <th> Địa chỉ </th>
            <th width="100"> Tháo tác </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                stt++;
                <tr data-objectid="@item.Id" role="row" class="">
                    <td>@stt</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodeDonVi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDelete)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Update", new { id = item.Id }, new { @class = "update btn btn-info" })@Html.ActionLink("Xem", "Detail", new { id = item.Id }, new { @class = "detail btn btn-info" })
                        <a class="delete btn btn-danger" href="javascript:;">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
