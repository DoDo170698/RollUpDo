@model IEnumerable<Entities.Models.SystemManage.Person>
@{
    Layout = null;
    int stt = 0;
    var CText = (string)(ViewBag.CText ?? "") ;
}
<table class="table table-striped table-hover table-bordered" id="sample_editable_1">
    <thead>
        <tr>
            <th> STT</th>
            <th> Mã @CText</th>
            <th> Đơn vị </th>
            <th> Tên @CText</th>
            <th> Liên hệ </th>
            <th width="100"> Tháo tác </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                stt++;
                <tr data-objectid="@item.Code" role="row" class="">
                    <td>@stt</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonVi.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                        <br>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @*@Html.ActionLink("Xem", "Detail", new { id = item.Id }, new { @class = "detail btn btn-info" })*@
                        @Html.ActionLink("Sửa", "Update", new { Code = item.Id }, new { @class = "update btn btn-info" })
                        <a class="delete btn btn-danger" href="javascript:;">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
